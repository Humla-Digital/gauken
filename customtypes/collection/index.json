{
  "format": "custom",
  "id": "collection",
  "label": "Collection",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": ""
        }
      },
      "summary": {
        "type": "StructuredText",
        "config": {
          "label": "Summary",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "artworks": {
        "type": "Group",
        "config": {
          "label": "Artworks",
          "repeat": true,
          "fields": {
            "artwork": {
              "type": "Link",
              "config": {
                "label": "Artwork",
                "select": "document",
                "repeat": false,
                "customtypes": [
                  {
                    "id": "art_piece",
                    "fields": [
                      "artwork",
                      "title",
                      "description",
                      "size",
                      "price"
                    ]
                  }
                ]
              }
            }
          }
        }
      },
      "exhibition": {
        "type": "Link",
        "config": {
          "label": "Exhibition",
          "select": "document",
          "repeat": false,
          "customtypes": [
            {
              "id": "exhibitions",
              "fields": [
                "cover_image",
                "title",
                "description",
                "date_and_time",
                "geopoint_location"
              ]
            }
          ]
        }
      }
    }
  }
}
